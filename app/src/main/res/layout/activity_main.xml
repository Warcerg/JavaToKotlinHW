        android:text="@string/task_a" />

    <TextView
        android:id="@+id/textViewDataClass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2DataClass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
