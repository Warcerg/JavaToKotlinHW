    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textviewTaskC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_c" />

    <TextView
        android:id="@+id/textViewCycle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewCycle2"
        android:layout_width="match_parent"
